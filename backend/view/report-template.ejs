<!DOCTYPE html>
<html>
<head>
  <style>
    /* Add your CSS styles here */
    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
    }

    .container {
      width: 80%;
      margin: 0 auto;
      background-color: #fff;
      padding: 20px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .header {
      text-align: center;
      margin-bottom: 30px;
    }

    h1 {
      font-size: 24px;
      margin: 0;
      padding: 10px 0;
      color: #333;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      margin-bottom: 30px;
    }

    table, th, td {
      border: 1px solid #ccc;
      padding: 8px;
    }

    th {
      background-color: #f0f0f0;
      color: #333;
    }

    ul {
      list-style-type: disc;
      margin-top: 0;
      padding-left: 20px;
    }

    .most-searched {
      margin-top: 30px;
    }

    .most-searched h2 {
      font-size: 20px;
      color: #333;
    }

    .most-searched li {
      color: #555;
      margin-bottom: 5px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>UrSafeSrilanka Medicine Searching App Report</h1>
    </div>
    <table>
      <thead>
        <tr>
          <th>Category</th>
          <th>Data</th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length > 0) { %>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.data %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="2">No data available</td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <% if (users.some(user => user.name === "Most Searched Medicines")) { %>
      <div class="most-searched">
        <h2>Most Searched Medicines:</h2>
        <ul>
          <% users.find(user => user.name === "Most Searched Medicines").data.split("<br>").forEach(item => { %>
            <li><%= item %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
  </div>
</body>
</html>

